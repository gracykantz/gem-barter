<% @categories.each do |category| %>
  <%= link_to category_furniture_items_path(category.id) do %>
    <div class="category-background" style="background-image:linear-gradient(45deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.8)), url(<%= cl_image_path category.photo %>)">
    <h3 class="category-text"><%= category.name %></h3>
    </div>
    <% end %>
<% end %>
