<div class="navbar navbar-light navbar-lewagon fixed-bottom">
  <%= link_to "pages#home", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
  <div class="nav_icons" id="navbarSupportedContent">
      <% if user_signed_in? %>
          <%= link_to "#", class: "nav-link" do %>
          <p class="nav-item"><i class="nav_icon fas fa-search"></i></p>
          <% end %>

          <%= link_to "#", class: "nav-link" do%>
          <p class="nav-item"><i class="nav_icon far fa-comments"></i></p>
          <% end %>

        <%= link_to "#", class: "nav-link" do%>
          <%= cl_image_tag(current_user.photo, class: "avatar nav-item", :crop=>"crop", :gravity=>"face", width: 1700, height: 1700)%>
        <% end %>
      <% else %>
        <p class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </p>
      <% end %>
  </div>
</div>
