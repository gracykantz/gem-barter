<%= simple_form_for(@furniture, html: { multipart: true}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>

    <%= f.fields_for :images do |p| %>
      <% if !@furniture.title.nil? %>
        <% @images.each do |image| %>
          <%= cl_image_tag image.photo, height: 400, width: 380, crop: :fill  %>
        <% end %>
      <% else %>
        <div class="field">
          <%= p.label :photo %><br>
          <%= p.file_field :photo, :multiple => true, name: "images[photo][]", accept:"image/*;capture=camera" %>
        </div>
      <% end %>
   <% end %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
